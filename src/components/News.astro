---
const { date, mainContent, title } = Astro.props;
---

<html lang="es">
  <head>
    <style>
      @font-face {
        font-weight: normal;
        font-style: normal;
      }

      body {
        font-family: 'Futura Book', Arial, sans-serif;
        font-size: 20px;
      }

      .container {
        border-top: 1px solid #000;
        width: 300px;
        padding: 10px;
      }

      .date {
        font-size: 12px;
        color: #333;
      }

      .title {
        font-size: 18px;
        font-weight: bold;
        margin-top: 5px;
        color: #000;
      }

      .main-content {
        font-size: 16px;
        font-weight: bold;
        margin-top: 5px;
        line-height: 1.5;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="date">
        {date}
      </div>
      <div class="title">
        {title}
      </div>
      <div class="main-content">
        {mainContent}
      </div>
    </div>
  </body>
</html>
