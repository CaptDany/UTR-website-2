<html lang="es">
  <head>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body, html {
        width: 100%;
        height: 100%;
        font-family: Arial, sans-serif;
      }

      .carousel-container {
        width: 100%;
        max-width: 800px;
        margin: 50px auto; /* Centra el carrusel horizontalmente */
        overflow: hidden;
        border-radius: 10px;
        position: relative;
      }

      .carousel-track {
        display: flex;
        width: 100%;
        height: 400px;
        transition: transform 0.5s ease-in-out;
      }

      .carousel-item {
        min-width: 100%;
        height: 100%;
      }

      .carousel-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      /* Botones de control opcionales */
      .carousel-control {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        font-size: 30px;
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        padding: 10px;
        cursor: pointer;
      }

      .carousel-control.left {
        left: 10px;
      }

      .carousel-control.right {
        right: 10px;
      }
    </style>
  </head>
  <body>
    <div class="carousel-container">
      <div class="carousel-track" id="carouselTrack">
        <!-- Carrusel de imágenes -->
        <div class="carousel-item">
          <img src="https://via.placeholder.com/800x400.png?text=Image+1" alt="Imagen 1">
        </div>
        <div class="carousel-item">
          <img src="https://via.placeholder.com/800x400.png?text=Image+2" alt="Imagen 2">
        </div>
        <div class="carousel-item">
          <img src="https://via.placeholder.com/800x400.png?text=Image+3" alt="Imagen 3">
        </div>
      </div>

      <!-- Botones de control (opcional) -->
      <div class="carousel-control left" onclick="moveLeft()">‹</div>
      <div class="carousel-control right" onclick="moveRight()">›</div>
    </div>

    <script>
      let currentIndex = 0;
      const track = document.getElementById('carouselTrack')!;  // Operador "!" asegura que no es null
      const totalItems = document.querySelectorAll('.carousel-item').length;

      function moveRight() {
        currentIndex = (currentIndex + 1) % totalItems;
        updateCarousel();
      }

      function moveLeft() {
        currentIndex = (currentIndex - 1 + totalItems) % totalItems;
        updateCarousel();
      }

      function updateCarousel() {
        const offset = -currentIndex * 100;
        track.style.transform = `translateX(${offset}%)`;
      }

      // Rotación automática cada 3 segundos
      setInterval(moveRight, 3000);
    </script>
  </body>
</html>