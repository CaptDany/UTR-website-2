---
interface Props {
  firstLine: string;
  secondLine?: string;
  img?: string;
}

const { firstLine, secondLine, img } = Astro.props;
---

{img ? (
  <div class="container">
    <!-- Componente con imagen de fondo -->
    <img class="background-image" src={img} alt="Imagen de fondo" />

    <!-- Texto sobrepuesto -->
    <div class="text-overlay">
      <h2>
        <span class="smallTitle">{secondLine}</span><br />
        <span class="titulo2">{firstLine}</span>
      </h2>
    </div>
  </div>
) : (
  <div class="container-no-img">
    <h2>{secondLine}</h2>
    <h1>{firstLine}</h1>
  </div>
)}

<style>
  /* Estilos para el primer componente */
  .container {
    position: relative;
    width: 100%;
    height: 400px;
    overflow: hidden;
    border-radius: 20px;
  }

  .background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(70%);
    border-radius: 20px;
  }

  .text-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    color: #000;
    background-color: white;
    padding: 20px;
    max-width: 269px;
    border-radius: 20px 0 0 20px;
  }

  .text-overlay h2 {
    font-size: 36px;
    margin: 0;
    line-height: 1.2;
  }

  .text-overlay .titulo2 {
    color: #e30613;
  }

  .text-overlay p {
    margin: 20px 0 0;
    font-size: 24px;
    line-height: 1.2;
  }

  /* Estilos para el segundo componente */
  .container-no-img {
    display: flex;
    flex-direction: column;
  }

  .container-no-img h2 {
    font-size: 30px;
    color: #000000;
    line-height: 30.77px;
    font-family: "Barlow", sans-serif;
  }

  .container-no-img h1 {
    font-size: 30px;
    color: #e30613;
    line-height: 47.18px;
    font-family: "Barlow", sans-serif;
  }
</style>
