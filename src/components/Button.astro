// Puedes agregar cualquier lógica aquí si es necesario
const { label } = Astro.props; // El prop 'label' pasará el texto de cada botón
---

<style>
  .buttons {
    display: flex;
    flex-direction: column;
    gap: 50px; /* Separación de 50px entre cada botón */
    align-items: center; /* Centra los botones horizontalmente */
    width: 100%; /* Ocupa todo el ancho del contenedor */
  }

  button {
    background-color: transparent;
    border: 2px solid rgb(0, 0, 0); /* Mantiene el borde negro */
    color: rgb(0, 0, 0); /* Texto en negro */
    padding: 0.75rem;
    font-size: 1.25rem;
    font-weight: bold; /* Negrita para los textos de los botones */
    cursor: pointer;
    border-radius: 0 0 0 20px; /* Esquina inferior izquierda redondeada */
    transition: background-color 0.3s ease;
    width: 100%; /* Los botones ocuparán todo el ancho disponible */
    max-width: 349px; /* Ancho máximo del botón */
    height: 81px; /* Altura fija */
  }

  span {
    display: block;
    width: 185px; /* Ancho del texto dentro del botón */
    height: 21px; /* Altura del texto */
    line-height: 21px; /* Alineación vertical del texto */
    margin: 0 auto; /* Centrar horizontalmente */
  }

  button:hover {
    background-color: white; /* Cambia a blanco al pasar el mouse */
    color: #E12030; /* Texto rojo al hacer hover */
  }
</style>

<div class="buttons">
  <button>
    <span>{label}</span>
  </button>
  <!-- Puedes agregar más botones aquí como desees -->
</div>
