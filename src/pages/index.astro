---
import Home from '../layouts/Mobile/Home.astro';
import Topbar from '../components/Topbar.astro';
import Titles from '../components/Titles.astro';
import Carousel from '../components/Carousel.astro';
import Text from '../components/Text.astro';
import Video from '../components/Video.astro';
import Placard from '../components/Placard.astro';
---

<Home title="Welcome to Astro.">
	<style>
	  main {
		display: flex;
		flex-direction: column;
		gap: 50px; /* Espaciado de 50px entre componentes */
	  }
	</style>
  
	<main>
	  <Topbar/>
	  <Titles smallTitle="pipi"/>
	  <Text/>
	  <Carousel/>
	  <Video/>
	  <Text/>
	  <Placard/>
	</main>
  </Home>

