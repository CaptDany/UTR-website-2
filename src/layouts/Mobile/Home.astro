---
import Carousel from '../../components/Carousel.astro';
import Placard from '../../components/Placard.astro';
import HeadText from '../../components/HeadText.astro';
import Topbar from '../../components/Topbar.astro';
import Video from '../../components/Video.astro';
import ParagraphBody from '../../components/ParagraphBody.astro';
import UnivesityData from '../../components/Univesity_Data.astro';
import Information from '../../components/Information.astro';
import News from '../../components/News.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<style>
		main {
		  display: flex;
		  flex-direction: column;
		  gap: 50px; /* Espaciado de 50px entre componentes */
		}
	  </style>
	<body>  
			<main>
			  <Topbar/>
			  <HeadText smallTitle="UTR"/>
			  <ParagraphBody content="Wildcat"/>
			  <Carousel/>
			  <Video/>
			  <HeadText bigTitle="University"/>
			  <Placard/>
			  <UnivesityData/>
			  <Carousel/>
			  <HeadText smallTitle="UTR"/>

			  <News date="27/09/2020" mainContent="UTR webside start to devoloper"/>
			  <a>See all news<a/>
				<div class="imagen-contenedor">
    <img src="https://utr.edu.mx/pages/nosotros/imagenes_nosotros/OP1.jpeg" alt="Imagen 1" class="imagen" />
  </div>
  <div class="imagen-contenedor">
    <img src="https://utr.edu.mx/pages/nosotros/imagenes_nosotros/OP4.jpeg" alt="Imagen 2" class="imagen" />
  </div>
			  <Information/>
			</main>
	</body>
</html>

