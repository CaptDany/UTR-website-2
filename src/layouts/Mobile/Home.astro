---
import Carousel from '../../components/Carousel.astro';
import HeadText from '../../components/HeadText.astro';
import Topbar from '../../components/Topbar.astro';
import Video from '../../components/Video.astro';
import ParagraphBody from '../../components/ParagraphBody.astro';
import UnivesityData from '../../components/UnivesityData.astro';
import News from '../../components/News.astro';
import Button from '../../components/Button.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <style>
    main {
      display: flex;
      flex-direction: column;
      gap: 50px; /* Espaciado de 50px entre componentes */
      color: #ffffff; /* Texto blanco por defecto para el main */
    }
    .buttons {
      display: flex;
      flex-direction: column;
      gap: 30px; /* Espaciado de 30px entre los botones */
      align-items: center; /* Centra los botones horizontalmente */
    }
    .footer-info {
      display: flex;
      flex-direction: column;
      gap: 50px; /* Espaciado de 50px entre los párrafos */
      align-items: center; /* Centra el contenido horizontalmente */
    }
    .container {
      width: 393px;
      height: 956px;
      margin: 0 auto; /* Centrar el contenedor horizontalmente */
      background-color: #000000; /* Fondo negro */
      border: 1px solid #000000; /* Borde opcional para ver el contenedor */
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 50px; /* Espaciado de 50px entre los elementos dentro del contenedor */
    }

    h2 {
      color: #ffffff; /* Asegurar que el h2 sea blanco */
    }
  </style>
  <body>  
    <main>
      <Topbar/>
      <HeadText bigTitle="wilcat" />

      <Carousel/>
      <Video/>
      
      <HeadText bigTitle="University"/>
	  <Button label="EXPLORE OUR PROGRAMES" />
      <UnivesityData/>

      <Carousel/>
      <HeadText smallTitle="UTR"/>
      <News/>
      
      <!-- Botones de acciones -->
      <div class="button-container">
        <h2>Take the Next Step</h2>
        <div class="buttons">
          <Button label="REQUEST INFO" />
          <Button label="VISIT" />
          <Button label="APPLY NOW" />
        </div>
      </div>

      <!-- Nueva sección con contenedor personalizado -->
      <div class="container">
        <!-- Footer del contenido -->
        <!-- Título principal -->
        <ParagraphBody content="Notice of Nondiscriminatory Policy" />
        <!-- Contenido del aviso -->
        <ParagraphBody  content="Universidad Tecnológica El Retoño admits students of any race, color, national and ethnic origin to all the rights, privileges, programs, and activities generally accorded or made available to students at the school. It does not discriminate on the basis of race, color, national and ethnic origin in administration of its educational policies, admissions policies, scholarship and loan programs, and athletic and other school-administered programs."/>
        <ParagraphBody  content="Universidad Tecnológica El Retoño" />
        <ParagraphBody content="Carretera a San Luis Potosí km. 68\nComunidad El Retoño\n20337, El Retoño, Aguascalientes." />
        <ParagraphBody content="449 7860 984" />
        <ParagraphBody content="contacto@utr.edu.mx" />
        <ParagraphBody content="Universidad Tecnológica El Retoño ©2024" />
      </div>

    </main>
  </body>
</html>
